#!/usr/bin/env python2
'''A script to calculate adler32 checksum of given files'''

BLOCKSIZE=256*1024*1024
import sys
from zlib import adler32
import ntpath

for fname in sys.argv[1:]:
 asum = 1
 f = open(fname)
 while True:
   data = f.read(BLOCKSIZE)
   if not data:
     break
   asum = adler32(data, asum)

 print str(asum)
