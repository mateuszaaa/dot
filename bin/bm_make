#!/bin/bash

if [ -z $BM_REMOTE_ROOT ]; then
    echo "BM_REMOTE_ROOT not set(path to rsync on wrlin[nb])"
    exit 1
fi

if [ -z $BM_SERVER ]; then
    echo "BM_SERVER not set - remote ssh alias"
    exit 1
fi

BM_REMOTE_ROOT=${BM_REMOTE_ROOT}/BTS_SC_BM/$BM_SUBPATH
echo "ssh $BM_SERVER compile_local=1 make -C $BM_REMOTE_ROOT $1 $2 $3 $4 $5 $6 $7"
ssh  $BM_SERVER "compile_local=1 make -C $BM_REMOTE_ROOT $1 $2 $3 $4 $5 $6 $7" >&1
