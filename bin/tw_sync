#!/bin/bash
SRC_DIR=$2
REMOTE_HOST=$1
if [ -z $SRC_DIR ]; then
  echo "missing input dir"
  exit -1
fi

rsync -auvt --include '*/' --include '*.cpp' --include "*.h" --include "*.sh" --include "*.launch" --include "*.yaml" --exclude '*' $SRC_DIR/brain_ws $REMOTE_HOST:~/aeolus/
rsync -auvt --include '*/' --include "*.sh" --include "*.launch" --include "*.yaml" --exclude '*' $SRC_DIR/bin $REMOTE_HOST:~/aeolus/
