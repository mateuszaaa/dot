#!/bin/bash
if [ -z $1 ]; then
    echo "please provide a path"
    exit 
fi
MAIN=$1
mkdir -p $MAIN/archives
mkdir -p $MAIN/documents
mkdir -p $MAIN/text
mkdir -p $MAIN/pdf
mkdir -p $MAIN/music
mkdir -p $MAIN/movies
mkdir -p $MAIN/torrent
mkdir -p $MAIN/html
mkdir -p $MAIN/binary
mkdir -p $MAIN/images
mkdir -p $MAIN/android

mv $MAIN/*.tar $MAIN/archives >/dev/null 2>&1
mv $MAIN/*.tgz $MAIN/archives >/dev/null 2>&1
mv $MAIN/*.rar $MAIN/archives >/dev/null 2>&1
mv $MAIN/*.7z $MAIN/archives >/dev/null 2>&1
mv $MAIN/*.zip $MAIN/archives >/dev/null 2>&1
mv $MAIN/*.tar.gz $MAIN/archives >/dev/null 2>&1
mv $MAIN/*.tar.bz2 $MAIN/archives >/dev/null 2>&1

mv $MAIN/*.doc $MAIN/documents >/dev/null 2>&1
mv $MAIN/*.rtf $MAIN/documents >/dev/null 2>&1
mv $MAIN/*.odt $MAIN/documents >/dev/null 2>&1
mv $MAIN/*.docx $MAIN/documents >/dev/null 2>&1
mv $MAIN/*.xlsx $MAIN/documents >/dev/null 2>&1
mv $MAIN/*.xls $MAIN/documents >/dev/null 2>&1
mv $MAIN/*.ods $MAIN/documents >/dev/null 2>&1
mv $MAIN/*.ppt $MAIN/documents >/dev/null 2>&1
mv $MAIN/*.odp $MAIN/documents >/dev/null 2>&1

mv $MAIN/*.c $MAIN/text >/dev/null 2>&1
mv $MAIN/*.cpp $MAIN/text >/dev/null 2>&1
mv $MAIN/*.rb $MAIN/text >/dev/null 2>&1
mv $MAIN/*.py $MAIN/text >/dev/null 2>&1
mv $MAIN/*.txt $MAIN/text >/dev/null 2>&1
mv $MAIN/*.sh $MAIN/text >/dev/null 2>&1
mv $MAIN/*.csv $MAIN/text >/dev/null 2>&1
mv $MAIN/*.*akefile $MAIN/text >/dev/null 2>&1

mv $MAIN/*.pdf $MAIN/pdf >/dev/null 2>&1

mv $MAIN/*.mp3 $MAIN/music >/dev/null 2>&1
mv $MAIN/*.wav $MAIN/music >/dev/null 2>&1

mv $MAIN/*.mov $MAIN/movies >/dev/null 2>&1
mv $MAIN/*.avi $MAIN/movies >/dev/null 2>&1

mv $MAIN/*.bin $MAIN/binary >/dev/null 2>&1
mv $MAIN/*.sh  $MAIN/binary >/dev/null 2>&1
mv $MAIN/*.exe $MAIN/binary >/dev/null 2>&1
mv $MAIN/*.bat $MAIN/binary >/dev/null 2>&1
mv $MAIN/*.jar $MAIN/binary >/dev/null 2>&1

mv $MAIN/*.html $MAIN/html >/dev/null 2>&1

mv $MAIN/*.torrent $MAIN/torrent >/dev/null 2>&1

mv $MAIN/*.jpg $MAIN/images >/dev/null 2>&1
mv $MAIN/*.jepg $MAIN/images >/dev/null 2>&1
mv $MAIN/*.png $MAIN/images >/dev/null 2>&1
mv $MAIN/*.svg $MAIN/images >/dev/null 2>&1

mv $MAIN/*.apk $MAIN/android >/dev/null 2>&1
mv $MAIN/*.APK $MAIN/android >/dev/null 2>&1

